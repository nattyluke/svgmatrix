{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "target": "ESNext",
    "rootDir": "src",
    "outFile": "types/index.d.ts"
  },
  "files": ["types/types.d.ts", "src/index.js"],
  "include": ["src/*.js", "types/*.ts"],
  "exclude": ["node_modules", "dist", "experiments", "types/index.d.ts", "test"]
}
